<h1>User List</h1>
<table>
<thead>
    <th>Name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Edit</th>
    <th>Destroy</th>
  </thead>
  <tbody>
    <% @users.each do |u|%>
      <tr>
        <td><%= u.name%></td>
        <td><%= u.age%></td>
        <td><%= u.gender%></td>
       <td><%= link_to "Edit", edit_user_path(u) %></td>
        <td><%= link_to "Destroy", user_path(u), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
      </tr>
    <% end %>
  </tbody>

</table><br>
<button><%= link_to "New Record", new_user_path%></button>
